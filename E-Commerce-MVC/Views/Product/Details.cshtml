    }

    .description-label {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .description-text {
        color: #6c757d;
        line-height: 1.6;
        font-size: 1.1rem;
    }

    .product-actions {
        margin-top: 2rem;
    }

    .btn {
        padding: 12px 24px;
        font-weight: 500;
