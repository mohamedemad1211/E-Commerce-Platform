        margin-top: 12px;
    }

    .toast-btn {
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .toast-btn-primary {
        background: #000;
