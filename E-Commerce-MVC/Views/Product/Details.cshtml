        border: 1px solid #ddd;
    }

    .toast-btn-secondary:hover {
        background: #e9ecef;
    }

    .btn-close {
        background: none;
        border: none;
        color: #666;
        cursor: pointer;
        font-size: 16px;
        padding: 4px;
    }

    .btn-close:hover {
        color: #333;
    }

    .date-display {
